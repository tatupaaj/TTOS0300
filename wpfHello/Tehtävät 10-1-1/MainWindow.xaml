<Window x:Class="Tehtävät_10_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtävät_10_1_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel>
                <CheckBox x:Name="chcProduct" Content="CheckBox" Margin="10" FontSize="14" Checked="chcProduct_Checked"/>
                <CheckBox x:Name="chcProduct1" Content="CheckBox" Margin="10" FontSize="14"/>
                <CheckBox x:Name="chcProduct2" Content="CheckBox" Margin="10" FontSize="14"/>
                <CheckBox x:Name="chcProduct3" Content="CheckBox" Margin="10" FontSize="14"/>
                <Button x:Name="btnBuy" Content="Buy" Margin="10" Width="60" HorizontalAlignment="Left" FontSize="14"/>
            </StackPanel>
            <StackPanel>
                <TextBlock x:Name="txbShopping" TextWrapping="Wrap" Text="Shopping List" FontSize="16"/>
                <TextBlock x:Name="txbList" TextWrapping="Wrap" Text="" FontSize="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
