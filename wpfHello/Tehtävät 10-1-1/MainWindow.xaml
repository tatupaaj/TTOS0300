<Window x:Class="Tehtävät_10_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtävät_10_1_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel>
                <CheckBox x:Name="chcMaito" Content="Maito" Margin="10" FontSize="14" Checked="chcMaito_Checked"/>
                <CheckBox x:Name="chcPepsi" Content="Pepsi" Margin="10" FontSize="14" Checked="chcPepsi_Checked"/>
                <CheckBox x:Name="chcJuusto" Content="Juusto" Margin="10" FontSize="14" Checked="chcJuusto_Checked"/>
                <CheckBox x:Name="chcKana" Content="Kana" Margin="10" FontSize="14" Checked="chcKana_Checked"/>
                <Button x:Name="btnBuy" Content="Buy" Margin="10" Width="60" HorizontalAlignment="Left" FontSize="14" Click="btnBuy_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBlock x:Name="txbShopping" TextWrapping="Wrap" Text="Shopping List" FontSize="16"/>
                <TextBlock x:Name="txbList" TextWrapping="Wrap" Text="" FontSize="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
