<Window x:Class="WPFThreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFThreadDemo"
        mc:Ignorable="d"
        Title="Simple Thread Demo" Height="350" Width="525">
    <Grid>
        <StackPanel>
        <Button x:Name="btnWork" Content="Do Long Work" Width="150" FontSize="16" Click="btnWork_Click" ></Button>
        <Button x:Name="btnFire" Content="Fire!" Width="150" FontSize="16" Click="btnFire_Click" ></Button>
            <TextBox x:Name="txtMessage" Text="[Messages come here]" Width="auto" FontSize="16"></TextBox>
        </StackPanel>
    </Grid>
</Window>
