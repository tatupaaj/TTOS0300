                <TextBlock x:Name="txbPalkka" Text="j" FontSize="16" Margin="5,0,5,0"></TextBlock>
            </StackPanel>
            <StackPanel Width="170" Background="LightSkyBlue">
                <Label x:Name="lblHae" Content="Hae tietoja" FontSize="16"></Label>
                <Button x:Name="btnHae" Content="Hae työntekijä" FontSize="16" Margin="10"></Button>
                <Button x:Name="btnTyhjenna" Content="Tyhjennä" FontSize="16" Margin="10"></Button>
