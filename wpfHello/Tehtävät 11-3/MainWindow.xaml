            <StackPanel Width="177" Background="LightBlue">
                <Label x:Name="lblTiedot" Content="Työntekijän tiedot" FontSize="16"></Label>
                <Label x:Name="lblEtunimi" Content="Etunimi" FontSize="16"></Label>
                <TextBlock x:Name="txbEtunimi" Text="j" FontSize="16" Margin="5,0,5,0"></TextBlock>
